package de.tudarmstadt.informatik.tk.assistanceplatform.moduleregistry;

/**
 * @author bjeutter
 * This class holds information about a module registration
 */
public class ModuleRegistration {
	private String id;
	private String location;
	private Capability[] requiredCapabilites;
	private Capability[] optionalCapabilites;
	
	public ModuleRegistration(String id, String location, Capability[] requiredCapabilites, Capability[] optionalCapabilites) {
		this.id = id;
		this.location = location;
		this.requiredCapabilites = requiredCapabilites;
		this.optionalCapabilites = optionalCapabilites;
	}
	
	//val id : String, val location : String, val requiredCapabilities : Array[Capability], val optionalCapabilities : Array[Capability] ) {
}