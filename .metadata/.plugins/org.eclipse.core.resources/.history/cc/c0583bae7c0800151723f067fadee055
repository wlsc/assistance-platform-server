package de.tudarmstadt.informatik.tk.assistanceplatform.modules.hotplaces;

import de.tudarmstadt.informatik.tk.assistanceplatform.data.GeographicPosition;

/**
 * Data structure for a "hot place". It simply holds a position and a description.
 * @author bjeutter
 */
public class HotPlace {
	private GeographicPosition position;
	
	private String description;
	
	public HotPlace(GeographicPosition pos) {
		this(pos, "unknown");
	}
	
	public HotPlace(GeographicPosition pos, String description) {
		this.position = pos;
		this.description = description;
	}

	public String getDescription() {
		return description;
	}

	public GeographicPosition getPosition() {
		return position;
	}
}
