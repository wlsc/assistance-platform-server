# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# User management
POST	/users/register				controllers.UsersController.register
POST	/users/login				controllers.UsersController.login
GET 	/users/my_profile/:type		controllers.UsersController.myProfile(type)
PUT		/users/my_profile			controllers.UsersController.updateProfile

# Sensor data
POST	/sensordata/insert			controllers.SensorDataController.insert

# Assistance
GET		/assistance/list			controllers.AssistanceController.list
POST	/assistance/activate		controllers.AssistanceController.activate
POST	/assistance/deactivate		controllers.AssistanceController.deactivate

# Module API
POST	/modules/register			controllers.ModulesController.register

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
